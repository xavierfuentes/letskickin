{% extends '@Layouts/default.html.twig' %}

{% block body_id %}pot-show{% endblock %}

{% block content %}
    {{ include(
        '@Blocks/potHeader.html.twig',
        { 'pot': pot }
    ) }}

    {% for participant in pot.participants %}
        {{ include(
            '@Blocks/potParticipant.html.twig',
            { 'participant': participant }
        ) }}
    {% endfor %}

    {{ form(participant_form) }}

    {% if isAdmin %}
        {{ include(
        '@Blocks/potAdminSection.html.twig',
        { 'pot': pot }
        ) }}
    {% endif %}
{% endblock %}